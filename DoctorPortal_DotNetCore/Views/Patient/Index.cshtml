@model IEnumerable<DoctorPortal_DotNetCore.Models.Dto.PatientDTO>

	@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="breadcrumbs">
        <div class="breadcrumbs-inner">
            <div class="row m-0">
                <div class="col-sm-4">
                    <div class="page-header float-left">
                        <div class="page-title">
                            <h1>Patient</h1>
                        </div>
                    </div>
                </div>
                <div class="col-sm-8">
                    <div class="page-header float-right">
                        <div class="page-title">
                            <ol class="breadcrumb text-right">
                                <li><a href="#">Patient</a></li>
                                <li><a href="#">List </a></li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        <div class="animated fadeIn">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Patient List</strong>
                        <div class="float-right">
                            <a asp-controller="Patient" asp-action="Create" class="btn btn-outline-primary">
                                <i class="fa fa-plus"></i> Create New Patient</a>
                        </div>
                        </div>
                        <div class="card-body">

                            <table class="table  table-bordered table-striped" id="tbpatient">
                                <thead>
                                    <tr>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Phone Number
                                        </th>
                                        <th>
                                            Email
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.FirstName  @item.LastName</td>
                                            <td>@item.PhoneNumber</td>
                                            <td>@item.Email</td>
                                            <td>
                                           
                                            <a asp-controller="Patient" asp-action="Update" asp-route-PatientId="@item.Id" class="btn btn-success "><i class="fa fa-edit"></i></a>
                                            <a asp-controller="Patient" asp-action="Delete" asp-route-PatientId="@item.Id" class="btn btn-danger "><i class="fa fa-trash-o"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>


                        </div>
                    </div>
                </div>


            </div>
        </div><!-- .animated -->
    </div>

@* <script src="https://cdn.datatables.net/2.1.3/js/dataTables.bootstrap5.js"></script>
 *@


<script>
	$(document).ready(function () {
		$('#tbpatient').DataTable();

	});
</script>