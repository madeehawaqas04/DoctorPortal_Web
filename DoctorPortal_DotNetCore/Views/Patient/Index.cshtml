@model IEnumerable<DoctorPortal_DotNetCore.Models.Dto.PatientDTO>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Patient List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Patient" asp-action="Create" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New Patient</a>
        </div>
    </div>

    <table class="table">
		<thead>
			<tr>
				<th>
					Name
				</th>
				<th>
					Phone Number
				</th>
				<th>
					Email
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach(var item in Model){
				<tr>
					<td>@item.FirstName  @item.LastName</td>
					<td>@item.PhoneNumber</td>
					<td>@item.Email</td>
					<td>
						<a asp-controller="Patient" asp-action="Update" asp-route-PatientId="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
						<a asp-controller="Patient" asp-action="Delete" asp-route-PatientId="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
					</td>
				</tr>
			}
		</tbody>
    </table>

</div>