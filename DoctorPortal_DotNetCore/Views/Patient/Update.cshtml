@model DoctorPortal_DotNetCore.Models.Dto.PatientDTO



@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Patient</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="#">Patient</a></li>
                            <li><a href="#">Update </a></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Create Patient</strong>
                        <div class="float-right">
                            <a asp-action="Index" asp-controller="Patient" class="btn btn-outline-primary btn-sm">
                                <i class="fa fa-backward"></i> Back
                            </a>
                        </div>
                    </div>
                    <div class="card-body card-block">

                        <form asp-action="Update">
                            <input hidden asp-for="Id" />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label asp-for="FirstName" class="form-control-label"></label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input asp-for="FirstName" class="form-control" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label asp-for="LastName" class="form-control-label"></label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input asp-for="LastName" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label asp-for="PhoneNumber" class="form-control-label  "></label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input asp-for="PhoneNumber" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label asp-for="Email" class="form-control-label  "></label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label asp-for="Address" class="form-control-label  "></label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <textarea asp-for="Address" class="form-control"></textarea>
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="modal-footer">
                                <input type="submit" value="Update" class="btn btn-success " />
                            </div>
                        </form>

                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div>


                
