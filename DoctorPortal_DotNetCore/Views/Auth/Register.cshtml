@model DoctorPortal_DotNetCore.Models.Dto.RegisterationRequestDTO
@{
    Layout = "~/Views/Shared/_Empty.cshtml";
}


<form method="post">
    
    <div class="sufee-login d-flex align-content-center flex-wrap">

        <div class="container">
            <div class="login-content">
               
                <div class="login-form">
                    <div class="login-logo">
                        <a href="index.html">
                            <img class="align-content" src="~/images/logo/logo_6.png" alt="">
                        </a>
                    </div>
                    <div class="row text-center">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                        <div class="form-group">
                            <label>Email address</label>
                            <input asp-for="UserName" type="email" class="form-control" placeholder="Email..." />
                        </div>
                        <div class="form-group">
                            <label>Phone Number</label>
                            <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Phone Number..." />

                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password..." />

                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox"> Agree the terms and policy
                            </label>
                        </div>
                        <button type="submit" value="
Submit" class="btn btn-primary btn-flat m-b-30 m-t-30">Register</button>
                        <div class="register-link m-t-15 text-center">
                            <p>
                                Already have account ? <a asp-controller="Auth" asp-action="Login"> Sign in</a>

                            </p>
                        </div>
                </div>
            </div>
        </div>
    </div>
    
</form>

