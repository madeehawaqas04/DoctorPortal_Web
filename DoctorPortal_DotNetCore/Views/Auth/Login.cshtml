@model DoctorPortal_DotNetCore.Models.Dto.LoginRequestDTO
@{
    Layout = "~/Views/Shared/_Empty.cshtml";
}

<form method="post">
    <div class="sufee-login d-flex align-content-center flex-wrap">
        <div class="container">
            <div class="login-content">
              
                <div class="login-form">
                    <div class="login-logo">
                        <a>
                            <img class="align-content" src="~/images/logo/logo_6.png" alt="">
                        </a>
                        </div>
                        <div class="row text-center">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                        <div class="form-group">
                            <label>Email address</label>
                        <input asp-for="UserName" type="text" class="form-control" placeholder="Email..." />
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password..." />


                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox"> Remember Me
                            </label>
                            <label class="pull-right">
                                <a >Forgotten Password?</a>
                            </label>

                        </div>
                        <button type="submit" value="Submit" class="btn btn-success btn-flat m-b-30 m-t-30">Sign in</button>
                       
                        <div class="register-link m-t-15 text-center">
                        <p>Don't have account ? <a asp-controller="Auth" asp-action="Register"> Sign Up Here</a></p>
                        </div>
                   
                </div>
            </div>
        </div>
    </div>
